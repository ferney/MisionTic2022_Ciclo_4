<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudades de colombia"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginStart="20sp"
        android:id="@+id/nombre_ciudades"
        />

    <EditText
        android:id="@+id/departamento"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/nombre_ciudades"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:hint="Departamento"
        android:inputType="text" />

    <EditText
        android:id="@+id/ciudad"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/departamento"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:hint="ciudad"
        android:inputType="text" />

    <EditText
        android:id="@+id/poblacion"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/ciudad"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:hint="poblacion"
        android:inputType="text" />

    <Button
        android:id="@+id/boton_getCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/poblacion"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="consultar" />

    <Button
        android:id="@+id/boton_newCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton_getCiudad"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="guardar" />

    <Button
        android:id="@+id/boton_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/boton_newCiudad"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="editar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:text="eliminar"
        android:id="@+id/boton_eliminar"
        android:layout_below="@id/boton_editar"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:text="limpiar"
        android:id="@+id/boton_limpiar"
        android:layout_below="@id/boton_eliminar"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="20sp"
        android:text="eliminar todo"
        android:id="@+id/boton_eliminarTodo"
        android:layout_below="@id/boton_limpiar"
        />
</RelativeLayout>